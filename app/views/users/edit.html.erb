<div class="container padded">
  <div class="row">
    <div class="form-new-user col-md-6 col-md-offset-3">
      <%= simple_form_for @user do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.submit "Update my information", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

