<div class="container">
  <div class="row">
    <div class="subnavbar-wagon">
      <!-- Logo -->

      <!-- Right Navigation -->
      <div class="subnavbar-wagon-right hidden-xs hidden-sm">

          <p class="subnavbar-wagon-item subnavbar-wagon-button"><%= link_to t(".top_call_to_action", default: "Search for a motorbike"), motorbikes_path %></p>
          <a class="tab active" data-target="#bikes">
            <p class="subnavbar-wagon-item subnavbar-wagon-button">My bikes</p>
          </a>
          <a class="tab" data-target="#rentals">
            <p class="subnavbar-wagon-item subnavbar-wagon-button">My pending rentals</p>
          </a>

          <div class="tab-content" id="bikes">
            <%= render 'my-bikes' %>
          </div>
          <div class="tab-content hidden" id="rentals">
            <%= render 'my-pending-rentals' %>
          </div>

      </div>
    </div>

  </div>
</div>


<script>
  $(document).ready((function) {
  $(".tab").on("click", function(e){
    // Change active tab
    $(".tab").removeClass("active");
    $(this).addClass("active");
    // Hide all tab-content (use class="hidden")
    $(".tab-content").addClass("hidden");
    // Show target tab-content (use class="hidden")
    showTab = $(this).data("target");
    $(showTab).removeClass("hidden");
  });
});
</script>

